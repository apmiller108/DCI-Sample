<% content_for :title, "Create an Auction" %>

<h1>Create an Auction</h1>

<div id="auction_params_errors" class="alert alert-block alert-error" style="display:none;">
</div>

<%= form_for AuctionParams.empty, url: auctions_path, remote: true do |f| %>
  <fieldset>
    <%= f.label :item_name %>
    <%= f.text_field :item_name %>

    <%= f.label :item_description %>
    <%= f.text_field :item_description %>

    <%= f.label :buy_it_now_price %>
    <%= f.text_field :buy_it_now_price %>

    <%= f.label :end_date %>
    <%= f.datetime_select :end_date, {use_month_numbers: true}, {class: 'datetime'} %>
  </fieldset>

  <div class="form-actions">
    <%= f.submit "Create", class: "btn btn-primary" %>
  </div>
<% end %>
