<% content_for :title, @auction.item_name %>

<div id="buy_it_now_errors" class="alert alert-block alert-error" style="display:none;">
</div>

<h1><%= @auction.item_name %></h1>

<p>
  <b>Description</b><br>
  <%= @auction.item_description %>
</p>

<p>
  <b>Seller</b><br>
  <%= @auction.seller_name %>
</p>

<p>
  <b>Price</b><br>
  <%= @auction.buy_it_now_price %>
</p>

<p>
  <b>Winner</b><br>
  <div id="winner"><%= @auction.buyer_name %></div>
</p>

<div class="form-actions">
  <%= link_to "Buy It Now!", auction_bids_path(@auction.id), class: "btn", remote: true, method: "POST", id: "buy_it_now" %>
</div>
